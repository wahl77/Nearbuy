= form_for @community, html:{role:"form", class:"new_community form-horizontal"} do |f|
  - if @community.errors.any?
    #error_explanation
      %h2= "#{pluralize(@community.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @community.errors.full_communitys.each do |msg|
          %li= msg

  .field.form-group
    = f.label :name, "New Community", class: "sr-only"
    = f.text_field :name, class: "form-control", placeHolder: "Community name"
  .field.form-group
    = f.label :description, "New Comment", class: "sr-only"
    = f.text_area :description, rows:"3", style:'width:100%', class: "form-control", placeHolder: "Description"
  .actions.form-group
    = f.submit 'Create Community', class: "pull-right btn btn-success"
